
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for things like school logos or other public assets.
    match /{allPaths=**} {
      allow read;
      // You would typically restrict write access more granularly.
      // For this prototype, we allow any authenticated user to write.
      allow write: if request.auth != null;
    }

    // Specifically allow users to manage their own profile pictures.
    // The path includes the user's ID to enforce this rule.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
